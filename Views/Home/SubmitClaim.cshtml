<!--creating an html form-->
<div class="contain_claim">
    <form class="claim_form">
        <h2>
            <i class="fa fa-folder-open" style="font-size:5rem;color:#046df6;"></i><br />
            Submit Your Claim
        </h2>
        <div class="form-row">
            <div class="form-group">
                <label>Number of Sessions:</label>
                <input type="number" id="Sessions" onmouseout="total_calculate()" />
            </div>
            <div class="form-group">
                <label>Number of Hours:</label>
                <input type="number" id="Hours" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Rate Amount (R):</label>
                <input type="number" id="Rate" onmouseout="total_calculate()" />
            </div>
            <div class="form-group">
                <label>Total Amount</label>
                <input type="number" id="price" value="10" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Module Name</label>
                <input type="text" id="module" />
            </div>
            <div class="form-group">
                <label>Faculty Name</label>
                <input type="text" id="faculty" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Upload Supporting Documents</label>
                <input type="file" id="documents" />
            </div>
        </div>

        <input type="submit" value="submit claim" class="button_claim" />

    </form>
</div>
<!-- function to calculate the total amount -->
<script>
    function total_calculate(){
    //alert("on calculate");
    var sessionNumber = document.getElementById("Sessions").value;
    var rateAmount = document.getElementById("Rate").value;
    var Total = Number(sessionNumber) * Number(rateAmount);
    document.getElementById("price").value = Total;

    //alert(sessionNumber);

    }

